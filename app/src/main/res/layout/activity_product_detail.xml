<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ProductDetailActivity">

    <TextView
        android:id="@+id/tvProductNamePd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProductImagePd"
        android:layout_width="161dp"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductNamePd"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProductDescriptionPd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="Product Description"
        android:textColor="@color/color_subtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductCurrentPricePd" />

    <TextView
        android:id="@+id/tvProductOldPricePd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ProductOldPrice"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductRatings" />

    <TextView
        android:id="@+id/tvProductRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No rating available"
        android:textColor="@color/color_subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProductImagePd" />

    <TextView
        android:id="@+id/tvProductCurrentPricePd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ProductNewPrice"
        android:textColor="@color/color_subtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductOldPricePd" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductDescriptionPd">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPurchaseItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purchase_item_background_color"
            android:text="Purchase Item now"
            android:textColor="@color/color_text" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_subtext"
            android:text="Add to my cart"
            android:textColor="@color/color_text" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>